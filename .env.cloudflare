# Cloudflare部署环境变量配置
# 基于现有配置适配Cloudflare环境

# ===========================================
# 前端环境变量 (Cloudflare Pages)
# ===========================================

# API基础URL - 指向Cloudflare Workers后端
VITE_API_URL=https://email-backend-worker.your-subdomain.workers.dev

# 应用配置
VITE_APP_NAME=User Management System
VITE_APP_VERSION=1.0.0

# ===========================================
# 后端环境变量 (Cloudflare Workers)
# ===========================================

# 应用配置
NODE_ENV=production
PORT=8787
API_PREFIX=api

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-cloudflare
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-cloudflare
JWT_REFRESH_EXPIRES_IN=7d

# 数据库配置 (需要使用外部数据库服务)
# 推荐使用 PlanetScale, Supabase, 或 Neon
DB_HOST=your-database-host.com
DB_PORT=5432
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=user_management
DB_SSL=true

# 邮件配置 (保持现有QQ邮箱配置)
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=1801273437@qq.com
SMTP_PASS=unpviszocymheeaa
SMTP_FROM=1801273437@qq.com

# Redis配置 (使用Upstash Redis)
REDIS_HOST=your-upstash-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-upstash-redis-password
REDIS_URL=redis://your-upstash-redis-url

# 安全配置
BCRYPT_ROUNDS=12
EMAIL_CODE_EXPIRES_IN=300
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS配置 (更新为Cloudflare Pages域名)
CORS_ORIGIN=https://your-frontend.pages.dev,https://your-custom-domain.com

# ===========================================
# Cloudflare特定配置
# ===========================================

# Workers KV命名空间ID (可选)
KV_NAMESPACE_ID=your-kv-namespace-id

# D1数据库ID (如果使用Cloudflare D1)
D1_DATABASE_ID=your-d1-database-id

# R2存储桶名称 (如果使用Cloudflare R2)
R2_BUCKET_NAME=your-r2-bucket