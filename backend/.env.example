# Application Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api

# Security Configuration
BCRYPT_ROUNDS=12
EMAIL_CODE_EXPIRES_IN=300
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100